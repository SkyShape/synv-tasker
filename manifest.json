{
    "name": "SynV Tasker",
    "description": "Tasker Extension!",
    "version": "1.0",
    "permissions": [
      "chrome://favicon/",
      "storage",
      "tabs",
      "contextMenus"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/hourglass16.png",
        "32": "images/hourglass32.jpg",
        "48": "images/hourglass48.png",
        "128": "images/hourglass128.png"
      }

    },  
    "background":{
      "scripts": [
        "packages/progressbar.js",
        "packages/uuidv4.min.js",
        "js/action-items-utile.js",
        "js/background.js"
      ],
      "persistent" : false
    },    
    "icons": {
        "16": "images/hourglass16.png",
        "32": "images/hourglass32.jpg",
        "48": "images/hourglass48.png",
        "128": "images/hourglass128.png"
      },
    "manifest_version": 2
  }